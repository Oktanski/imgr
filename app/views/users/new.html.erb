<% provide(:title, 'Sign up') %>

<h1>Zarejestruj sie</h1>

<%= form_for "user", :url => { :action => "new" } do |f| %>

<%= f.label "username" %><br>
<%= f.text_field "username" %><br>

<%= f.label "password" %><br>
<%= f.password_field "password" %><br>

<%= f.label "email" %><br>
<%= f.text_field "email" %><br>

<%= f.submit %>

<% end %>
